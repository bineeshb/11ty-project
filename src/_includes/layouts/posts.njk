{% extends "layouts/base.njk" %}

{% set posts = collections["posts_" + locale] %}
{% block content %}
  {{ content | safe }}
  <ul class="list-unstyled">
    {% for post in posts %}
      <li>
        <h3>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h3>
        <p>{{ site[locale].labelPostedOn }}
          {{ post.date | date("DD MMMM YYYY", locale) }}</p>
      </li>
    {% endfor %}
  </ul>
{% endblock content %}